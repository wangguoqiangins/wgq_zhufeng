<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.wgq.zhufengfm.app"
        >

    <uses-permission android:name="android.permission.INTERNET"/>

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
            android:name="com.wgq.zhufengfm.app.MainApplication"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:theme="@style/AppTheme"
            >
        <activity
                android:name="com.wgq.zhufengfm.app.MainActivity"
                android:label="@string/app_name"
                >
        </activity>
        <activity
                android:name="com.wgq.zhufengfm.app.SplashActivity"
                android:configChanges="orientation|keyboardHidden|screenSize"
                android:label="@string/title_activity_splash"
                android:theme="@style/FullscreenTheme"
                >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name="com.wgq.zhufengfm.app.GuideActivity"
                android:label="@string/title_activity_guide"
                >
        </activity>
        <activity
                android:name="com.wgq.zhufengfm.app.Test1Activity"
                android:label="@string/title_activity_test1"
                >
        </activity>
        <activity
                android:name="com.wgq.zhufengfm.app.SettingsActivity"
                android:label="@string/title_activity_settings"
                >
        </activity>
    </application>

</manifest>
