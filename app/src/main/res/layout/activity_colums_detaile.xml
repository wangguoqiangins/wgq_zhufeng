<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
              android:orientation="vertical"
                tools:context="com.wgq.zhufengfm.app.ColumsDetaileActivity">

    <RelativeLayout
            android:id="@+id/colums_detaile_block1"
            android:layout_width="match_parent"
            android:layout_height="100dp">
        <ImageView
                android:id="@+id/colums_detaile_block1_imageview"
                android:src="@mipmap/ic_launcher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <LinearLayout
                android:layout_toRightOf="@id/colums_detaile_block1_imageview"
                android:orientation="vertical"
                android:id="@+id/colums_detaile_block1_subblock"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:text="txt1"
                    android:drawableLeft="@drawable/abc_ic_ab_back_mtrl_am_alpha"
                    android:id="@+id/colums_detaile_block1_subblock_txt1"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>
            <TextView
                    android:text="txt2"
                    android:id="@+id/colums_detaile_block1_subblock_txt2"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>
            <TextView
                    android:text="txt3"
                    android:id="@+id/colums_detaile_block1_subblock_txt3"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/colums_detaile_block2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:text="收藏"
                android:id="@+id/colums_detaile_block2_txt1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
        <TextView
                android:text="批量下载"
                android:id="@+id/colums_detaile_block2_txt2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
        <TextView
                android:text="相关推荐"
                android:id="@+id/colums_detaile_block2_txt3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>

    </LinearLayout>
    <ListView
            android:id="@+id/colums_detaile_block3"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    </ListView>

</LinearLayout>
